
<%= form_for [@clienta, @cita] do |f| %>

	<%= f.hidden_field :clienta_id, value: @clienta.id %>

	<%= f.radio_button :tipo_de_cita_id, '1' %>
	<%= f.label :tipo_de_cita_id, 'Primera', :value => '1' %>
  
	<%= f.radio_button :tipo_de_cita_id, '2' %>
	<%= f.label :tipo_de_cita_id, 'Medicion', :value => '2' %>
  
	<%= f.radio_button :tipo_de_cita_id, '3' %>
	<%= f.label :tipo_de_cita_id, 'Medicion Final', :value => '3' %>

	<%= f.radio_button :tipo_de_cita_id, '4' %>
	<%= f.label :tipo_de_cita_id, 'Entrega', :value => '4' %> 

	<%= f.label :fecha, 'Fecha' %>
	<%= f.text_field :fecha  %>

	<%= f.submit %>

<% end %>

