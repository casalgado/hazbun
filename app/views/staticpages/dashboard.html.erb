<div class="container">
	<div class="row">

		<div id="" class="col-md-6">
		</div>

		<div id="appointment-column" class="col-md-6 ">

				<div class="row">

					<div id="" class="col-md-3">
						<div id= "dash-date-box" class="">
							<ul>
									<li id="appointment-day"><%=@hoy.mday%></li>
									<li id="appointment-day-text"><%=@hoy.nombrar_dia.upcase%></li>
							</ul>
						</div>
					</div>

					<div id="" class="col-md-9">
						<div id="dash-title-box">
							<h3> Citas </h3>
						</div>
					</div>

				</div>
		

				<div class='center'>
					
					<div id="dash-table" class="">
						<table class="table table-hover">
							<tr>
								<th>  </th>
								<th>  </th>
							</tr> 
							<% for appointment in @citas_de_hoy %>
							<tr>
								<td class="" style="width:70px"> <%= image_tag("appointment_type#{appointment.appointment_type_id}.png") %> </td>
								<td> 
									<ul> 
										<li><%= link_to("#{appointment.customer.full_name}", customer_path(:id => appointment.customer.id)) %> </li>
										<li><%= appointment.date.strftime "%l:%M %P" %> </li>
											<% if  appointment.customer.land_phone %>
												<li> Tel: <%= "#{appointment.customer.land_phone}" %> </li>
											<% else %>
												<br />
											<% end %>
									</ul>
								</td>
							</tr>
							<% end %>
						</table>
					</div>
					
				</div>

		</div>
	</div>
</div>



