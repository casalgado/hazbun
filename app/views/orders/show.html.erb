<h1>Orden</h1>

<ul>
	<li><%= link_to "#{@order.client.nombre_completo}", client_path(@client) %> </li>
	<% for item in @order.items %>
		<ul>
			<li><%= item.item_type.item_type %></li>
			<% for supply in item.supplies %>
				<ul>
					<li> <%= supply.supply_name %> - <%= supply.supply_color %> </li>
	<!--		<li> <%= supply.supplies_per_items.last.quantity %> </li>   -->
				</ul>
				<% end %>
			<li><div id="item_picture"> <%= image_tag item.picture_url(:thumb).to_s  %></div></li>
			<li><%= item.occasion.occasion %> </li>
		</ul>
	<% end %>

	<% if @order.closed == false %>
		<%= link_to "editar orden", edit_client_order_path(:id => @order.id)%>
	<% end %>
	
<h3>Abonos</h3>

	<p> Valor total de la Orden: <%= @order.total_value %>
	
	<% if @order.payments.empty? %>
		<p> Client no ha abonado a esta order </p>
	<% else %>
		<p> Pagos efectuados </p>
		<ul>
			<% for payment in @order.payments %>
			<li>$<%= payment.amount %> el dia <%= payment.date.strftime "%Y / %m / %d" %>
			<% end %>
		</ul>
	<% end %>
	
	<p> Nuevo Pago: <p>
	<%= render "orders/form_for_payment" %>

<h3>Citas</h3>

	<p> Nueva Cita: <p>
	<%= render "orders/form_for_appointment" %>

<br />
<br />

<% if @order.closed == false %>
	<%= link_to "cerrar orden", client_order_path(@client, @order, :cerrar => '1')%>
<% end %>

</ul>