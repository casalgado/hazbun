

<h3>Datos</h3>
	<ul>
		<li> <%= @clienta.nombre_completo %>      </li>
		<li> <%= @clienta.telefono  %>            </li>
		<li> <%= @clienta.direccion %>            </li>
		<li> <%= @clienta.email %>                </li>
		<% if @clienta.fecha_de_nacimiento %>
			<li> <%= @clienta.fecha_de_nacimiento.strftime '%b %d' %> </li>
		<% end %>
	</ul>
	<div id="clienta_picture"> <%= image_tag @clienta.picture_url(:thumb).to_s  %></div>
<p><%= link_to "Editar" ,  edit_clienta_path(@clienta) %></p>

<h3>Actividad</h3>
	<ul>
	<% for order in @clienta.ordenes_abiertas %>
		<li> <%= link_to "#{order.created_at.strftime '%b %Y'}", clienta_order_path(@clienta, order)  %> </li>
		<ul>
			<% for item in order.items %>
				<li> <%= item.item_type.item_type %> para <%= item.occasion.occasion %> </li>
				<li><div id="item_picture"> <%= image_tag item.picture_url(:thumb).to_s  %></div></li>
			<% end %>
		</ul>
	<% end %>
  </ul>

<h3>Historia</h3>
	<ul>
	<% for order in @clienta.ordenes_cerradas %>
		<li> <%= link_to "#{order.created_at.strftime '%b %Y'}", clienta_order_path(@clienta, order)  %> </li>
		<ul>
			<% for item in order.items %>
				<li> <%= item.item_type.item_type %> para <%= item.occasion.occasion %> </li>
				<li><div id="item_picture"> <%= image_tag item.picture_url(:thumb).to_s  %></div></li>
			<% end %>
		</ul>
	<% end %>
  </ul>

<h3>Medidas</h3>
	<% if @measurement %>
	<ul>
		<li> Talle Frente  : <%= @measurement.talle_frente %> </li>
		<li> Talle Espalda : <%= @measurement.talle_espalda %> </li>
		<li> Imperio       : <%= @measurement.imperio %> </li>
		<li> Contorno      : <%= @measurement.contorno %> </li>
		<li> Espalda       : <%= @measurement.espalda %> </li>
		<li> Busto         : <%= @measurement.busto %> </li>
		<li> Cintura       : <%= @measurement.cintura %> </li>
		<li> Cadera        : <%= @measurement.cadera %> </li>
		<li> Costado       : <%= @measurement.costado %> </li>
		<li> Cotilla       : <%= @measurement.cotilla %> </li>
		<li> Hombro        : <%= @measurement.hombro %> </li>
  </ul>
  <% end %>
	
<p><%= link_to "Actualizar Medidas", new_clienta_measurement_path(:clienta_id => @clienta.id) %></p>

<% unless @clienta.orders.empty? %>
	<% unless @clienta.has_open_order? %>
		<p><%= link_to "Nueva Orden", new_clienta_order_path(@clienta) %></p>
	<% end %>
<% else %>
	<p><%= link_to "Nueva Orden", new_clienta_order_path(@clienta) %></p>
<% end %>

<p><%= link_to "Nueva Cita" ,  new_clienta_appointment_path(@clienta) %></p>


