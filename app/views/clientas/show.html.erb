<div class="container">
	<div class="row">
		<div id="" class="welcome col-md-6">

			<div id="datos">
				<h3>Datos</h3>
					<ul>
						<li> <%= @customer.nombre_completo %>      </li>
						<li> <%= @customer.telefono  %>            </li>
						<li> <%= @customer.direccion %>            </li>
						<li> <%= @customer.email %>                </li>
						<% if @customer.fecha_de_nacimiento %>
							<li> <%= @customer.fecha_de_nacimiento.strftime '%b %d' %> </li>
						<% end %>
					</ul>
					<div id="customer_picture"> <%= image_tag @customer.picture_url(:thumb).to_s  %></div>
					<p><%= link_to "Editar" ,  edit_customer_path(@customer) %></p>
				</div>

			<div id="medidas">
				<h3>Medidas</h3>
					<% if @measurement %>
					<ul>
						<li> Talle Frente  : <%= @measurement.talle_frente %> </li>
						<li> Talle Espalda : <%= @measurement.talle_espalda %> </li>
						<li> Imperio       : <%= @measurement.imperio %> </li>
						<li> Contorno      : <%= @measurement.contorno %> </li>
						<li> Espalda       : <%= @measurement.espalda %> </li>
						<li> Busto         : <%= @measurement.busto %> </li>
						<li> Cintura       : <%= @measurement.cintura %> </li>
						<li> Cadera        : <%= @measurement.cadera %> </li>
						<li> Costado       : <%= @measurement.costado %> </li>
						<li> Cotilla       : <%= @measurement.cotilla %> </li>
						<li> Hombro        : <%= @measurement.hombro %> </li>
				  </ul>
			  	<% end %>
			  	<p><%= link_to "Actualizar Medidas", new_customer_measurement_path(:customer_id => @customer.id) %></p>
			 </div>

		</div>

		<div id="" class="welcome col-md-6">
			<h3>Actividad</h3>
				<ul>
				<% for order in @customer.ordenes_abiertas %>
					<li> <%= link_to "#{order.created_at.strftime '%b %Y'}", customer_order_path(@customer, order)  %> </li>
					<ul>
					<% for item in order.items %>
						<li> <%= item.item_type.item_type %> para <%= item.occasion.occasion %> </li>
						<li><div id="item_picture"> <%= image_tag item.picture_url(:thumb).to_s  %></div></li>
					<% end %>
					</ul>
				<% end %>
			 </ul>

		</div>

	</div>
</div>






<h3>Historia</h3>
	<ul>
	<% for order in @customer.ordenes_cerradas %>
		<li> <%= link_to "#{order.created_at.strftime '%b %Y'}", customer_order_path(@customer, order)  %> </li>
		<ul>
			<% for item in order.items %>
				<li> <%= item.item_type.item_type %> para <%= item.occasion.occasion %> </li>
				<li><div id="item_picture"> <%= image_tag item.picture_url(:thumb).to_s  %></div></li>
			<% end %>
		</ul>
	<% end %>
  </ul>


	


<% unless @customer.orders.empty? %>
	<% unless @customer.has_open_order? %>
		<p><%= link_to "Nueva Orden", new_customer_order_path(@customer) %></p>
	<% end %>
<% else %>
	<p><%= link_to "Nueva Orden", new_customer_order_path(@customer) %></p>
<% end %>

<p><%= link_to "Nueva Cita" ,  new_customer_appointment_path(@customer) %></p>


