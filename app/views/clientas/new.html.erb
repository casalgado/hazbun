
<ul>
<% @client.errors.each do |attr,msg|  %>
	 <li><%=msg%></li>
	<% end %>
</ul>

<%= form_for @client, :html => { :multipart => true } do |f| %>

	<%= f.label :nombre %>
  <%= f.text_field(:nombre) %>

  <%= f.label :apellido %>
  <%= f.text_field(:apellido) %>

  <%= f.label :email %>
  <%= f.text_field(:email) %>

 	<%= f.label :direccion %>
  <%= f.text_field(:direccion) %>

 	<%= f.label :telefono %>
  <%= f.text_field(:telefono) %>

  <%= f.label :fecha_de_nacimiento %>
  <%= f.date_select :fecha_de_nacimiento, :order => [:day, :month, :year], :start_year => Time.now.year - 70, :end_year => Time.now.year - 10 %>

  <%= f.label :picture %>
  <%= f.file_field :picture %>

  <%= f.label :remote_picture_url %>
  <%= f.text_field :remote_picture_url %>

  <%= f.submit "Crear Client"%>

<% end %>