<%= render 'staticpages/big_logo' %>

<div class="container app-width">
  <div class="row">
    <div id="welcome-client" class="welcome col-lg-6 col-md-6 col-sm-12 col-sm-12 center">
      <%= link_to image_tag("WelcomeCustomer.jpg"), new_customer_session_path %>
    </div>
    <div id="designer-login" class="welcome col-lg-6 col-md-6 col-sm-12 col-sm-12 center">
      <div class="sign-in-form">
        <h3>Iniciar Sesion Diseño </h3>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          
        <div><%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true %></div>

          
        <div><%= f.label :contraseña %><br />
        <%= f.password_field :password, autocomplete: "off" %></div>


        <% if devise_mapping.rememberable? -%>    
        <div>  <%= f.check_box :remember_me %>
               <%= f.label :recuerdame %></div>
          <% end -%>

        <div><%= f.submit "Iniciar Sesion" %></div>
        <% end %>

        <%= render "employees/shared/links" %>
      </div>

    </div>
  </div>
</div>

