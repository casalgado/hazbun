<div class="app-width">

    <h3> Crear Clienta </h3>

    <br />

<%= bootstrap_form_for @customer, :html => { :multipart => true } do |f| %>

    <div class="container app-width">
        <div class="row">

    <div class="customer-form-margin col-lg-6 col-md-6 col-sm-6 col-xs-6"> 
    <%= f.text_field :first_name,   layout: :horizontal, label: "Nombre" %> </div>
    
    <div class="customer-form-margin col-lg-6 col-md-6 col-sm-6 col-xs-6"> 
    <%= f.text_field :last_name,    layout: :horizontal, label: "Apellido" %> </div>

    <div class="customer-form-margin col-lg-6 col-md-6 col-sm-6 col-xs-6"> 
    <%= f.text_field :email,        layout: :horizontal, label: "Email" %> </div>    

    <div class="customer-form-margin col-lg-6 col-md-6 col-sm-6 col-xs-6"> 
    <%= f.text_field :id_number,    layout: :horizontal, label: "c.c." %> </div>

    <div class="customer-form-margin col-lg-6 col-md-6 col-sm-6 col-xs-6"> 
    <%= f.text_field :marriage,     layout: :horizontal, label: "Pareja" %> </div>

    <div class="customer-form-margin col-lg-6 col-md-6 col-sm-6 col-xs-6"> 
    <%= f.text_field :address,      layout: :horizontal, label: "Direccion" %> </div>
    
    <div class="customer-form-margin col-lg-6 col-md-6 col-sm-6 col-xs-6"> 
    <%= f.text_field :workplace,    layout: :horizontal, label: "Trabajo" %> </div>
    
    <div class="customer-form-margin col-lg-6 col-md-6 col-sm-6 col-xs-6"> 
    <%= f.text_field :land_phone,   layout: :horizontal, label: "Telefono" %> </div>
    
    <div class="customer-form-margin col-lg-6 col-md-6 col-sm-6 col-xs-6"> 
    <%= f.text_field :mobile_phone, layout: :horizontal, label: "Celular" %> </div>

  <div class="customer-form-margin col-lg-6 col-md-6 col-sm-6 col-xs-6"> 
    <%= f.date_select :date_of_birth, layout: :horizontal, label: "Fecha", :order => [:day, :month, :year], :start_year => Time.now.year - 70, :end_year => Time.now.year - 10 %> </div>

  <div class="customer-file-form-margin col-lg-6 col-md-6 col-sm-6 col-xs-6"> 
    <%= f.file_field :picture, layout: :horizontal, label: "Imagen" %> </div>
    
  <div class="customerfile-form-margin col-lg-6 col-md-6 col-sm-6 col-xs-6"> 
    <%= f.text_field :remote_picture_url, layout: :horizontal, label: "Url de imagen" %> </div>

            </div>
    </div>
  <%= f.submit "Crear Clienta" %>

<% end %>
</div>
