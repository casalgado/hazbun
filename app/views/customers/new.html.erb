<div class="app-width">

<%= bootstrap_form_for @customer, :html => { :multipart => true } do |f| %>

  <div class="customer-form-margin"> 
    <%= f.text_field :first_name, layout: :horizontal %> </div>

  <div class="customer-form-margin"> 
    <%= f.text_field :last_name, layout: :horizontal %> </div>

  <div class="customer-form-margin"> 
    <%= f.text_field :email, layout: :horizontal %> </div>

  <div class="customer-form-margin"> 
    <%= f.text_field :address, layout: :horizontal %> </div>

  <div class="customer-form-margin"> 
    <%= f.text_field :land_phone, layout: :horizontal %> </div>

  <div class="customer-form-margin"> 
    <%= f.date_select :date_of_birth, layout: :horizontal, :order => [:day, :month, :year], :start_year => Time.now.year - 70, :end_year => Time.now.year - 10 %> </div>
  <div class="customer-file-form-margin"> 
    <%= f.file_field :picture, layout: :horizontal, label: "Imagen" %> </div>
  <div class="customerfile-form-margin"> 
    <%= f.text_field :remote_picture_url, layout: :horizontal, label: "Url de Imagen" %> </div>

  <%= f.submit "Crear Clienta" %>

<% end %>
</div>


